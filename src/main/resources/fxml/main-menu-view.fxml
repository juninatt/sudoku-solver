<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="rootVBox"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="se.pbt.sudokusolver.controllers.MainMenuController"
      spacing="10"
      alignment="CENTER"
      stylesheets="@../styles/style.css"
      style="-fx-padding: 20;">

    <!-- Welcome Text -->
    <Label fx:id="welcomeLabel" style="-fx-font-size: 20; -fx-font-weight: bold;" />

    <!-- Dropdown for board size -->
    <HBox spacing="10"
          alignment="CENTER">

        <Label fx:id="boardSizeLabel" />
        <ComboBox fx:id="sizeDropdown" />
    </HBox>

    <!-- Dropdown for difficulty -->
    <HBox spacing="10"
          alignment="CENTER">

        <Label fx:id="difficultyLabel" />
        <ComboBox fx:id="difficultyDropdown" />
    </HBox>

    <!-- Checkbox for cheating -->
    <CheckBox fx:id="cheatModeCheckbox"/>

    <!-- Buttons -->
    <HBox spacing="20"
          alignment="CENTER">

        <Button fx:id="playButton" />
        <Button fx:id="rulesButton" />
    </HBox>
    <!-- TODO: Replace Menu → MenuItems with a single MenuButton that shows all languages directly -->
    <MenuButton fx:id="optionsMenuButton" text="?" mnemonicParsing="false">
        <items>
            <Menu fx:id="languageMenu">
                <!-- TODO: Move language menu item labels (Svenska, English etc) from FXML to controller -->
                <MenuItem fx:id="sv" text="Svenska" onAction="#changeLanguage"/>
                <MenuItem fx:id="en" text="English" onAction="#changeLanguage"/>
                <MenuItem fx:id="es" text="Español" onAction="#changeLanguage"/>
                <MenuItem fx:id="fr" text="Français" onAction="#changeLanguage"/>
                <MenuItem fx:id="de" text="Deutsch" onAction="#changeLanguage"/>
                <MenuItem fx:id="ca" text="Català" onAction="#changeLanguage"/>
            </Menu>
        </items>
    </MenuButton>
</VBox>

