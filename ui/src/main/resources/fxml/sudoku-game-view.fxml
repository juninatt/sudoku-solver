<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="rootVBox"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="se.pbt.sudokusolver.ui.controller.GameController"
      alignment="CENTER"
      spacing="20"
      style="-fx-padding: 20; -fx-background-color: #f9f9f9;"
      stylesheets="@/styles/style.css">

     <!-- Toolbar Section -->
     <HBox spacing="10"
           alignment="CENTER">

          <Button fx:id="homeButton">
               <graphic>
                    <ImageView fitHeight="20" fitWidth="20"/>
               </graphic>
               <tooltip>
                    <Tooltip text="Return to main menu"/>
               </tooltip>
          </Button>
     </HBox>

     <!-- Sudoku Grid Section -->
     <GridPane fx:id="gridPane"
               alignment="CENTER"
               hgap="5"
               vgap="5"/>

     <!-- Cheat Buttons -->
     <HBox fx:id="cheatButtonsBox"
           spacing="10"
           alignment="CENTER"
           visible="false"
           managed="false">
          <Button fx:id="nextHintButton" text="Next Hint"/>
          <Button fx:id="solveBoardButton" text="Solve Board"/>
     </HBox>
</VBox>

